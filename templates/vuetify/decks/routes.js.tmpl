// Decks listing
import home from "./home.vue";
{{ range .Decks -}}
// {{.Name}} - {{.Description}}
import {{.Name}}Deck from "./{{.Name}}.vue";
{{end}}
let routes = [
  {
    path: "home",
    name: "home_deck",
    component: home,
    meta: {
      entity: "Home",
      showInMenu: true,
      icon: "lock"
    }
  },
  {{- range $i, $v := .Decks}}
  {
    path: "{{lower .Name}}",
    name: "{{lower .Name}}_deck",
    component: {{.Name}}Deck,
    meta: {
      entity: "{{.Label}}",
      showInMenu: true,
      icon: "lock"
    }
  }{{if ne (plus1 $i) (len $.Decks)}},{{end}}
  {{- end}}
];

export default routes;