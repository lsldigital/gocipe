syntax = "proto3";

package models;
option go_package = "{{.AppImportPath}}/models";

{{range .Imports -}}
{{.}}
{{- end}}

message ListOpts {
	int64 Offset = 1;
	int64 Limit = 2;
	repeated ListSortOpts Sort = 3;
}

message ListSortOpts {
	string Field = 1;
	bool Ascending = 2;
}

{{ range .Entities -}}
// {{.Name}} {{.Description}}
message {{.Name}} { {{ range .Fields }}
	{{.Type}} {{.Name}} = {{.Index}};
{{- end}}
}

{{end}}
